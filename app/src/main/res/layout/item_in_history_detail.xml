<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:clickable="false"
        android:focusable="false"
        android:foreground="@drawable/card_ripple">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroudItem"
            android:padding="4dp">

        <TextView
                android:text="Cena za sztukę: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="@+id/historyAmount"
                app:layout_constraintBottom_toBottomOf="@+id/historyAmount"
                app:layout_constraintStart_toEndOf="@+id/historyAmount" android:layout_marginStart="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/historyPrice"
                app:layout_constraintTop_toTopOf="@+id/textView8"
                app:layout_constraintBottom_toBottomOf="@+id/textView8"
                app:layout_constraintStart_toEndOf="@+id/textView8" android:layout_marginStart="8dp"/>
        <TextView
                android:id="@+id/historyName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:text="Ilość: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/historyName"
                tools:ignore="MissingConstraints"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/historyAmount"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/textView2"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
        />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

