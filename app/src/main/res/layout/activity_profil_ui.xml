<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfilUI">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true"

    >

        <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleTextAppearance="@android:color/transparent"
                android:fitsSystemWindows="true"
        >

            <ImageView
                    app:layout_collapseMode="parallax"

                    android:contentDescription="Mój profil"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginBottom="25dp"/>

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin"
                    >

                <ImageView
                        android:id="@+id/edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginEnd="25dp"
                        android:src="@drawable/ic_mode_edit_black_24dp"
                />

                <ImageView
                        android:id="@+id/edit_profile_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginEnd="25dp"
                        android:src="@drawable/ic_close_black_24dp"
                        android:visibility="gone"
                />

            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>



    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:background="@color/colorBackgroudView"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/nestedScrollView2">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"

        >


            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBackgroudItem">


                <android.support.constraint.Guideline
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/guideline_left"
                        app:layout_constraintGuide_begin="24dp" app:layout_constraintTop_toTopOf="parent"/>
                <android.support.constraint.Guideline
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/guideline_right"
                        app:layout_constraintGuide_end="24dp"/>
                <ImageView
                        android:id="@+id/img"
                        android:layout_width="0dp"
                        android:layout_height="15dp"
                        android:background="@android:color/transparent"
                        app:layout_constraintBottom_toTopOf="@+id/line1" android:layout_marginBottom="8dp"
                        tools:ignore="MissingConstraints"/>

                <View
                        android:id="@+id/line1"
                        android:layout_width="20dp"
                        android:layout_height="2dp"
                        android:background="#000000"
                        app:layout_constraintStart_toStartOf="@id/guideline_left"
                        app:layout_constraintBottom_toBottomOf="@+id/or"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintEnd_toStartOf="@+id/or"


                />

                <TextView
                        android:id="@+id/or"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/line1"
                        app:layout_constraintTop_toTopOf="@+id/line1"
                        app:layout_constraintEnd_toStartOf="@+id/line2"
                        app:layout_constraintStart_toEndOf="@+id/line1"


                />

                <View
                        android:id="@+id/line2"
                        android:layout_width="220dp"
                        android:layout_height="2dp"
                        android:background="#000000"
                        app:layout_constraintBottom_toBottomOf="@+id/or"
                        app:layout_constraintEnd_toEndOf="@id/guideline_right"
                        app:layout_constraintStart_toEndOf="@+id/or"
                        app:layout_constraintTop_toTopOf="@+id/or"/>

                <EditText
                        android:id="@+id/profile_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/guideline_left"
                        app:layout_constraintEnd_toStartOf="@id/guideline_right"
                        app:layout_constraintTop_toBottomOf="@+id/line2"
                        android:textColor="#000000"
                        android:enabled="false"
                />

                <View
                        android:id="@+id/line3"
                        android:layout_marginTop="15dp"
                        android:layout_width="20dp"
                        android:layout_height="2dp"
                        android:background="#000000"
                        app:layout_constraintTop_toBottomOf="@id/profile_email"
                        app:layout_constraintStart_toStartOf="@id/guideline_left"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintEnd_toStartOf="@+id/imie"
                        android:visibility="gone"
                />
                <TextView
                        android:id="@+id/imie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Imię"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/line3"
                        app:layout_constraintTop_toTopOf="@+id/line3"
                        app:layout_constraintEnd_toStartOf="@+id/line4"
                        app:layout_constraintStart_toEndOf="@+id/line3"
                        android:visibility="gone"
                        />


                <View
                        android:id="@+id/line4"
                        android:layout_width="220dp"
                        android:layout_height="2dp"
                        android:background="#000000"
                        app:layout_constraintBottom_toBottomOf="@+id/imie"
                        app:layout_constraintEnd_toEndOf="@id/guideline_right"
                        app:layout_constraintStart_toEndOf="@+id/imie"
                        app:layout_constraintTop_toTopOf="@+id/imie"
                        android:visibility="gone"
                        />

                <EditText
                        android:id="@+id/profile_firstname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/guideline_left"
                        app:layout_constraintEnd_toStartOf="@id/guideline_right"
                        app:layout_constraintTop_toBottomOf="@+id/line4"
                        android:textColor="#000000"
                        android:visibility="gone"

                />

                <View
                        android:id="@+id/line5"
                        android:layout_marginTop="15dp"
                        android:layout_width="20dp"
                        android:layout_height="2dp"
                        android:background="#000000"
                        app:layout_constraintTop_toBottomOf="@id/profile_firstname"
                        app:layout_constraintStart_toStartOf="@id/guideline_left"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintEnd_toStartOf="@+id/nazwisko"
                        android:visibility="gone"
                />
                <TextView
                        android:id="@+id/nazwisko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nazwisko"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/line5"
                        app:layout_constraintTop_toTopOf="@+id/line5"
                        app:layout_constraintEnd_toStartOf="@+id/line6"
                        app:layout_constraintStart_toEndOf="@+id/line5"
                        android:visibility="gone"
                />

                <View
                        android:id="@+id/line6"
                        android:layout_width="220dp"
                        android:layout_height="2dp"
                        android:background="#000000"
                        app:layout_constraintBottom_toBottomOf="@+id/nazwisko"
                        app:layout_constraintEnd_toEndOf="@id/guideline_right"
                        app:layout_constraintStart_toEndOf="@+id/nazwisko"
                        app:layout_constraintTop_toTopOf="@+id/nazwisko"
                        android:visibility="gone"
                />

                <EditText
                        android:id="@+id/profile_lastname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/guideline_left"
                        app:layout_constraintEnd_toStartOf="@id/guideline_right"
                        app:layout_constraintTop_toBottomOf="@+id/line6"
                        android:textColor="#000000"
                        android:visibility="gone"
                />

                <View
                        android:id="@+id/line7"
                        android:layout_marginTop="15dp"
                        android:layout_width="20dp"
                        android:layout_height="2dp"
                        android:background="#000000"
                        app:layout_constraintTop_toBottomOf="@id/profile_lastname"
                        app:layout_constraintStart_toStartOf="@id/guideline_left"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintEnd_toStartOf="@+id/phone"
                        android:visibility="gone"
                />
                <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telefon"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/line7"
                        app:layout_constraintTop_toTopOf="@+id/line7"
                        app:layout_constraintEnd_toStartOf="@+id/line8"
                        app:layout_constraintStart_toEndOf="@+id/line7"
                        android:visibility="gone"
                />

                <View
                        android:id="@+id/line8"
                        android:layout_width="220dp"
                        android:layout_height="2dp"
                        android:background="#000000"
                        app:layout_constraintBottom_toBottomOf="@+id/phone"
                        app:layout_constraintEnd_toEndOf="@id/guideline_right"
                        app:layout_constraintStart_toEndOf="@+id/phone"
                        app:layout_constraintTop_toTopOf="@+id/phone"
                        android:visibility="gone"
                />

                <EditText
                        android:id="@+id/profile_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="@id/guideline_left"
                        app:layout_constraintEnd_toStartOf="@id/guideline_right"
                        app:layout_constraintTop_toBottomOf="@+id/line8"
                        android:textColor="#000000"
                        android:visibility="gone"
                />

                <View
                        android:id="@+id/line9"
                        android:layout_marginTop="15dp"
                        android:layout_width="20dp"
                        android:layout_height="2dp"
                        android:background="#000000"
                        app:layout_constraintTop_toBottomOf="@id/profile_phone"
                        app:layout_constraintStart_toStartOf="@id/guideline_left"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintEnd_toStartOf="@+id/city"
                />
                <TextView
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Miasto"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/line9"
                        app:layout_constraintTop_toTopOf="@+id/line9"
                        app:layout_constraintEnd_toStartOf="@+id/line10"
                        app:layout_constraintStart_toEndOf="@+id/line9"/>

                <View
                        android:id="@+id/line10"
                        android:layout_width="220dp"
                        android:layout_height="2dp"
                        android:background="#000000"
                        app:layout_constraintBottom_toBottomOf="@+id/city"
                        app:layout_constraintEnd_toEndOf="@id/guideline_right"
                        app:layout_constraintStart_toEndOf="@+id/city"
                        app:layout_constraintTop_toTopOf="@+id/city"/>


                <RelativeLayout
                        android:id="@+id/profile_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/profil_spinner_background"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="@id/guideline_left"
                        app:layout_constraintEnd_toStartOf="@id/guideline_right"
                        app:layout_constraintTop_toBottomOf="@+id/line10">

                    <Spinner
                            android:id="@+id/profile_city_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:popupBackground="@drawable/profil_spinner_background"

                            android:spinnerMode="dropdown"
                    />
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"/>
                </RelativeLayout>

                <View
                        android:id="@+id/line11"
                        android:layout_marginTop="15dp"
                        android:layout_width="20dp"
                        android:layout_height="2dp"
                        android:background="#000000"
                        app:layout_constraintTop_toBottomOf="@id/profile_city"
                        app:layout_constraintStart_toStartOf="@id/guideline_left"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintEnd_toStartOf="@+id/office"
                />
                <TextView
                        android:id="@+id/office"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biurowiec"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/line11"
                        app:layout_constraintTop_toTopOf="@+id/line11"
                        app:layout_constraintEnd_toStartOf="@+id/line12"
                        app:layout_constraintStart_toEndOf="@+id/line11"/>

                <View
                        android:id="@+id/line12"
                        android:layout_width="220dp"
                        android:layout_height="2dp"
                        android:background="#000000"
                        app:layout_constraintBottom_toBottomOf="@+id/office"
                        app:layout_constraintEnd_toEndOf="@id/guideline_right"
                        app:layout_constraintStart_toEndOf="@+id/office"
                        app:layout_constraintTop_toTopOf="@+id/office"/>


                <RelativeLayout
                        android:id="@+id/profile_office"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/profil_spinner_background"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="@id/guideline_left"
                        app:layout_constraintEnd_toStartOf="@id/guideline_right"
                        app:layout_constraintTop_toBottomOf="@+id/line12">

                    <Spinner
                            android:id="@+id/profile_office_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:popupBackground="@drawable/profil_spinner_background"
                            android:gravity="center"
                            android:spinnerMode="dropdown"
                    />
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"/>
                </RelativeLayout>

                <Button
                        android:id="@+id/profil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/guideline_left"
                        app:layout_constraintEnd_toStartOf="@id/guideline_right"
                        app:layout_constraintTop_toBottomOf="@+id/profile_office"
                        android:backgroundTint="@color/colorBackgroudItem"
                />

            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>